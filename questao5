import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    Scanner ler = new Scanner(System.in);

    int num;
    int par;
    int impar;
    
    par = 0;
    impar = 0;


    do {
      System.out.println("Digite um número: ");
      num = ler.nextInt();

      if(num > 0 && num < 1000){
        if(num % 2 == 0){
          par = par + num;
          }
        }
        else{
        impar = impar + num;
        
      } 
      
    }while(num > 1000);

    System.out.println("A soma dos números pares é:" +  par);
    System.out.println("Digite dos números impares é:" + impar);
  }
}

   

